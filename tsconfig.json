{
    "compilerOptions": {
        "module": "commonjs",
        "baseUrl": "src",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "strict": true,
        "downlevelIteration": true,
        "resolveJsonModule": true,
        "paths": {
            "@": ["./"],
            "@/*": ["./*"]
        }
    },
    "include": ["src/**/*"]
}
